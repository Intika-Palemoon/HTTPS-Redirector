{
  "manifest_version": 2,

  "name": "HTTP Nowhere",
  "description": "Block unencrypted web traffic for added security.",
  "version": "2.0.2",
  "icons": {
    "16": "images/icon16-on.png",
    "48": "images/icon48-on.png",
    "128": "images/icon128-on.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon19-on.png",
      "38": "images/icon38-on.png"
    }
  },
  "permissions": [
    "webRequest",
    "http://*/*"
  ]
}
