<?xml version="1.0"?>
<bindings xmlns="http://www.mozilla.org/xbl"
    xmlns:xbl="http://www.mozilla.org/xbl"
    xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
  <binding id="httpNowhere-button-binding">
    <content>
      <xul:stack id="httpNowhere-button-badge">
        <xul:label
            id="httpNowhere-button-badge-label"
            xbl:inherits="value=badgeLabel"/>
      </xul:stack>
      <xul:toolbarbutton
          class="httpNowhere-button"
          flex="1"
          allowevents="true"
          xbl:inherits="type,label">
        <children includes="menupopup"/>
      </xul:toolbarbutton>
    </content>
  </binding>
</bindings>
