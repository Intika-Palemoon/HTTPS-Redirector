<?xml version="1.0"?>
<bindings xmlns="http://www.mozilla.org/xbl"
    xmlns:xbl="http://www.mozilla.org/xbl"
    xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
  <binding id="http-nowhere-binding">
    <content>
      <xul:stack id="http-nowhere-button-badge">
        <xul:label
            id="http-nowhere-button-badge-label"
            xbl:inherits="value=badgeLabel"/>
      </xul:stack>
      <xul:toolbarbutton class="http-nowhere-button" flex="1" allowevents="true"
          xbl:inherits="type,image,label">
        <children includes="menupopup"/>
      </xul:toolbarbutton>
    </content>
  </binding>
</bindings>
